<div class="card container text-uppercase">
  <h4>Sign In</h4>
  <hr/>
  <%= form_for @changeset, session_path(@conn, :create), [as: :session],
fn f -> %>
    <%= input f, :email %>
    <%= input f, :password %>
    <%= submit "Submit", class: "btn btn-primary submit-btn" %>
    <p class="text-lowercase">
      <%= link "Forgot your password?", to: session_path(@conn, :password_reset) %>
    </p>
  <% end %>
</div>
