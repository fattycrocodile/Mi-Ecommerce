<%= form_for @changeset, @action, fn f ->  %>
  <div class="form-group row ">
  <%= input f, :name, nil, is_horizontal: true, description: "Include keywords that buyers would use to search for your item." %>
</div>
  <div class="form-group row ">
  <%= multi_select f, :option_type_ids, get_option_types(@option_types), nil, is_horizontal: true, description: "Include keywords that buyers would use to search for your item." %>
</div>
<div class="form-group row stickformbutton">
  <div class="col-sm-10">
     <%= submit "Cancel", class: "btn btn-primary submit-btn float-right" %>
      <%= submit "Submit", class: "btn btn-secondary btn-outline-secondary float-left submit-btn" %>
  </div>
</div>

<% end %>
